<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="100"
    android:gravity="center_horizontal"
    android:background="@drawable/shape2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="GİRİŞ"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/kullanici_giris_text"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/forget"
        android:hint="Kullanıcı Adı"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/sifre_giris_text"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/forget"
        android:hint="Şifre"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"/>

    <Button
        android:id="@+id/giris_btn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Giriş"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/roundedcorner3"
        android:backgroundTint="#00000000"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın yok mu??"
            android:textColor="@color/white"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/hesabimyok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayıt ol"
            android:backgroundTint="#008692F7"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



</LinearLayout>